#:kivy 2.0.0

<RobinAIApp>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    # Logo and title area
    BoxLayout:
        size_hint_y: 0.2
        orientation: 'vertical'
        padding: 20
        spacing: 10
        
        Label:
            text: "مشاعر | Mashaaer"
            font_size: '24sp'
            color: 0.9, 0.5, 1, 1
            bold: True
            size_hint_y: 0.7
        
        Label:
            id: greeting_label
            text: "Welcome to Mashaaer Feelings"
            font_size: '16sp'
            color: 0.7, 0.8, 1, 1
            size_hint_y: 0.3
    
    # Cosmic animation sphere
    RelativeLayout:
        size_hint_y: 0.25
        id: cosmic_sphere
        
        # Animated cosmic sphere
        BoxLayout:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas.before:
                Color:
                    rgba: 0.7, 0, 0.9, 0.8
                Ellipse:
                    pos: self.pos
                    size: self.size
                    source: 'data/sphere_glow.png'
            # Inner glow
            canvas:
                Color:
                    rgba: 0.8, 0.4, 1, 0.3
                Ellipse:
                    pos: self.x + self.width * 0.25, self.y + self.height * 0.25
                    size: self.width * 0.5, self.height * 0.5
    
    # Input and emotion analysis area
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.35
        padding: 20
        spacing: 15
        
        Label:
            id: emotion_label
            text: "How are you feeling today?"
            font_size: '18sp'
            color: 0.9, 0.9, 0.9, 1
            size_hint_y: 0.3
        
        TextInput:
            id: user_input
            hint_text: "Type your feelings here..."
            multiline: True
            font_size: '16sp'
            size_hint_y: 0.7
            background_color: 0.15, 0.15, 0.2, 1
            foreground_color: 0.9, 0.9, 1, 1
            cursor_color: 0.9, 0.5, 1, 1
            padding: 10
    
    # Button area
    BoxLayout:
        size_hint_y: 0.2
        padding: 20, 10
        spacing: 15
        
        Button:
            text: "Analyze"
            font_size: '18sp'
            background_color: 0.3, 0.5, 0.8, 1
            on_release: app.analyze_emotion()
        
        Button:
            id: recording_btn
            text: "Start Voice Input"
            font_size: '18sp'
            background_color: 0.8, 0, 0.8, 1
            on_release: app.toggle_recording()
    
    # Settings and language toggle
    BoxLayout:
        size_hint_y: 0.1
        padding: 20, 5
        spacing: 15
        
        Button:
            text: "English/عربي"
            size_hint_x: 0.5
            background_color: 0.2, 0.2, 0.3, 1
            on_release: app.toggle_language()
        
        Button:
            text: "Settings"
            size_hint_x: 0.5
            background_color: 0.2, 0.2, 0.3, 1
            on_release: app.open_settings()